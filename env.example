# --- OCR / ROI ---
# Paramètres pour l'extraction des zones d'intérêt (ROI) et la validation des données
ROI_CONFIG_PATH="config_roi.json"                  # Chemin vers le fichier de configuration des zones d'intérêt
VALIDATION_RULES_PATH="backend/config/validation_rules.json"  # Chemin vers les règles de validation des données


# --- Modèles Locaux ---
LLM_MODELS_DIR="backend/models"                   # Répertoire où sont stockés les modèles locaux


# --- Traduction NLLB (Gradio) ---
# Configuration pour le service de traduction NLLB via Gradio (service distant)
TRANSLATION_GRADIO_REPO="UNESCO/nllb"              # Dépôt Gradio pour le service de traduction
TRANSLATION_GRADIO_API_NAME="/translate"           # Nom de l'API Gradio pour la traduction
TRANSLATION_SOURCE_LANG="fra_Latn"                 # Langue source pour la traduction (français)
TRANSLATION_LANG_MOORE="mos_Latn"                  # Langue cible pour la traduction (moré)
TRANSLATION_LANG_DIOULA="dyu_Latn"                 # Langue cible pour la traduction (dioula)


# --- Traduction NLLB (fallback local) ---
# Configuration pour le modèle de traduction local NLLB (solution de secours)
TRANSLATION_LOCAL_REPO="facebook/nllb-200-distilled-600M"  # Version légère 600M
TRANSLATION_LOCAL_PATH="backend/models/nllb"       # Chemin local vers le modèle NLLB
TRANSLATION_LOCAL_AUTO_DOWNLOAD="0"                # Active/désactive le téléchargement automatique du modèle
TRANSLATION_DEVICE="cpu"                           # Périphérique pour l'inférence de traduction


# --- Hugging Face ---
# Token d'accès pour télécharger des modèles depuis Hugging Face Hub
HF_TOKEN="hf_your_access_token"                    # Jeton d'authentification Hugging Face


# --- API cache ---
API_CACHE_TTL_SECONDS="30"                         # Durée de vie du cache API (secondes). 0 désactive.
